<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<configSections>
		<section name="log4net" type="System.Configuration.IgnoreSectionHandler"/>
	</configSections>
	<log4net>
		<!--根据文件大小-->
		<appender name="RollingFileAppender_FileSize" type="log4net.Appender.RollingFileAppender">
			<file value="run.log" />
			<appendToFile value="true" />
			<rollingStyle value="Size" />
			<maxSizeRollBackups value="10" />
			<maximumFileSize value="100KB" />
			<staticLogFileName value="true" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread] (%file:%line) %-5level %logger [%property{NDC}] - %message%newline" />
			</layout>
		</appender>
		<!--根据日期-->
		<appender name="RollingFileAppender_Date" type="log4net.Appender.RollingFileAppender">
			<file value="run.log" />
			<appendToFile value="true" />
			<rollingStyle value="Date" />
			<datePattern value="yyyyMMdd" />
			<layout type="log4net.Layout.PatternLayout">
				<conversionPattern value="%date [%thread](%file:%line) %-5level %logger [%property{NDC}] - %message%newline" />
			</layout>
		</appender>
		<root>
			<appender-ref ref="RollingFileAppender_FileSize" />
		</root>
	</log4net>
</configuration>